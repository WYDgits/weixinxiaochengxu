/* pages/register/register.wxss */

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding-top: 20px;
}

.header1 {
  padding: 10px;
  font-size: 40rpx;
}

.header2 {
  padding: 10px;
  font-size: 25rpx;
}

.content {
  width: 95%;
  display: flex;
  justify-content: space-around;
}

.phone {
  width: 90%;
  background-color: rgba(128, 128, 128, 0.301);
  margin: 5px;
  padding: 5px;
  line-height: 40px;
  height: 40px;
}

.validation {
  width: 45%;
  background-color: rgba(128, 128, 128, 0.301);
  margin: 5px;
  padding: 5px;
  line-height: 40px;
  height: 40px;
  margin-left: 13px;
  float: left;
}

.validation input {
  width: 100%;
}

.button {
  width: 40%;
  margin: 5px;
  padding: 5px;
  line-height: 40px;
  height: 40px;
  float: right;
  margin-right: 13px;
}

.button button {
  border-radius: 0px;
  margin: -5px;
  line-height: 50px;
  height: 50px;
  background-color: #337ab7;
  border: transparent;
}

.button button::after {
  border-radius: 0;
}

input {
  height: inherit;
}

.login {
  border-radius: 0px;
  width: 87%;
  margin: 5px;
  background-color: #337ab7;
}

.login button::after {
  border-radius: 0;
}

button {
  border-radius: 0;
  background-color: #337ab7;
}
